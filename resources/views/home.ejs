<section class="menu container mx-auto py-5">
    <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mb-20 ">
    <% pizzas.map(function(pizza) { %>
     <div class="w-full md:w-54">
            <img class="h-40 mb-4 mx-auto" src="/images/<%= pizza.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                <span class=" size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
            <div class="flex items-center justify-around mt-6">
                <span class="font-bold text-lg">â‚¹ <%= pizza.price %></span>
                <button data-pizza ="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                    <span>+</span>
                    <span class="ml-4">Add</span>
                </button>
                </div>
            </div>
        </div>
   <% }) %>
</div>
</section>






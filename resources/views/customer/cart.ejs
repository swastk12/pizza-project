<section class="cart py-10 ">

<% if(session.cart) { %>

 <div class="order container mx-auto xl:w-1/2">

    <div class="flex items-center border-b border-gray-300 pb-4">
        <img src="/images/food.png" alt="">
        <h1 class="font-bold ml-4 text-2xl"> Order Summery </h1>
    </div>

    <div class="pizza-list">

        
      <% for(let pizza of Object.values(session.cart.items)) { %> 

        <div class="flex items-center my-8">
         <img  class="w-24" src="/images/<%= pizza.item.image %>" alt="">
         <div class="ml-4 flex-1">
             <h1><%= pizza.item.name %></h1>
             <span><%= pizza.item.size %></span>
         </div>
           <span class="flex-1"> <%= pizza.qty %></span>
           <span class="font-bold text-lg">₹ <%= pizza.item.price * pizza.qty %></span> 
           <button class="ml-12" id = "deleteCrdbuttom" data-pizza-id="<%= pizza.item._id %>"> Del </button>
           
           
          
</div>

<%  } %>


<hr>
<div class="text-right py-4">
    <div>
        <span class="text-lg font-bold">Total Amount:</span>
        <span class="amount text-2xl font-bold ml-2">₹ <%= session.cart.totalPrice %></span>
    </div>
     

<% if(user) { %>

    <div>

        <form action="/orders" method="POST" class="mt-12">
        <input  type="text" name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="Phone number">
        <input type="text" name="address" class="border border-gray-400 p-2 w-1/2" placeholder="Adress">
       <div>
            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6  " type="submit"> Order Now</button>
        </div>
        </form>
    </div>

    <%} else {%>
<a href="/login" class="inline-block cursor-pointer px-6 btn-primary 
     py-2 rounded-full text-white font-bold mt-6  ">Login to continue</a>
    
     <% } %>  




</div>
</div>
<%} else { %>

    <div class="empty-cart py-10">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2" >Cart Empty ☺️</h1>
            <p class="text-gray-500 text-lg mb-12"> you probably haven't ordered a pizza yet.<br>
                to order a pizza , go to the main page.</p>
            <img class="w-2/5 mx-auto" src="/images/cart.png" alt="shopping cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12" >Go Back</a>
        </div>
   </div>

        <% } %>

</section>


